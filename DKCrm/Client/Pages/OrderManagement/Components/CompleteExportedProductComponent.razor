    private void CalculateQuantity()
    {
        QuantityInReserveAll = 0;
        if (ExportedProduct!.SoldFromStorage != null)
            QuantityInReserveAll += ExportedProduct.SoldFromStorage.Select(s => s.Quantity).Sum();

        if (ExportedProduct.PurchaseAtExports != null)
            QuantityInReserveAll += ExportedProduct.PurchaseAtExports.Select(s => s.Quantity).Sum();

        MissingQuantity = ExportedProduct.Quantity - QuantityInReserveAll;
        if (ImportOfferCurrentPriceList != null)
        {
            var offersWithSelect = ImportOfferCurrentPriceList.Where(w => w.ExportProductPriceImportOffers != null)
            .SelectMany(s => s.ExportProductPriceImportOffers).Where(w => w.ExportedProductId == ExportedProduct.Id);
            if (offersWithSelect != null && offersWithSelect.Any())
            {
                _allSelectedFromOffers = offersWithSelect.Sum(s => s.Quantity);
            }
            else
            {
                _allSelectedFromOffers = 0;
            }

        }
    }

