                                             Margin="Margin.Dense"
                                             Min="0"
                                             Max="@((MissingQuantity > item.Quantity ? item.Quantity : MissingQuantity))"
                                             ValueChanged="@(v => SetFromStorageQuantity(v, (Guid)item.StorageId!))" Value="0"/>*@

